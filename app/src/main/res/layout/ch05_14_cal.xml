<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>

        <EditText
            android:layout_weight="1"
            android:id="@+id/et1"
            />
    </TableRow>
    <TableRow>

        <EditText
            android:layout_weight="1"
            android:id="@+id/et2"
            android:layout_span="5"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnNum0"
            android:layout_weight="1"
            android:text="0"/>
        <Button
            android:id="@+id/btnNum1"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:id="@+id/btnNum2"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:id="@+id/btnNum3"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:id="@+id/btnNum4"
            android:layout_weight="1"
            android:text="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnNum5"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:id="@+id/btnNum6"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:id="@+id/btnNum7"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/btnNum8"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/btnNum9"
            android:layout_weight="1"
            android:text="9"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnAdd"
            android:layout_weight="1"
            android:text="더하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnSub"
            android:layout_weight="1"
            android:text="빼기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnMul"
            android:layout_weight="1"
            android:text="곱하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnDiv"
            android:layout_weight="1"
            android:text="나누기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnRe"
            android:layout_weight="1"
            android:text="초기화"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tv1"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="계산 결과 : "
            android:textColor="#FF0000"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tv2"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_span="5"
            android:textColor="#0000FF"
            android:textSize="20sp"/>
    </TableRow>

</TableLayout>